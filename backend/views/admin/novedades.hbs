<div class="container" style="margin:50px auto">
	<div class="row">
		<div class="col">
			<p class="text text-white"> Hola {{usuario}} ! </p>
			<div class="text-end">
			<a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar Sesion<i class="fa-solid fa-xmark"></i></a></div>
		</div>
	</div>

	<div>
		<div class="row">
			<div class="col-7">
				<h3 class="text-white">Listado de Novedades</h3>
			</div>
			<div class="col-5 text-end">
				<a class="btn btn-success" href="/admin/novedades/agregar">Nuevo<i class="fa-solid fa-square-plus"></a>
			</div>
		</div>
	</div>	
	
	<table class="table table-info table-striped">
	<thead>
	<tr>
		<th scope="col"><i class="fa-solid fa-newspaper"></i></th>
		<th scope="col">Noticias</th>
		<th scope="col">Imgen</th>
	</tr>
	</thead>
	<tbody>
		{{#each novedades}}
	<tr class="table-active">
		<th scope="row">{{id}}</th>
		<td>{{titulo}}</td>
		<td>{{{imagen}}}</td>
		<td class="text-end">
		<a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i class="fa-solid fa-pen-to-square"></i></a>
		<a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i class="fa-solid fa-trash"></i></a>
	</td>
	</tr>
	{{/each}}
	
	</tbody>
	</table>