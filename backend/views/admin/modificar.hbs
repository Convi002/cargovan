<div class="container" style="margin-top:100px; background-color:lightblue;">
  <div class="row">
         <div class="col-6 offset-3">
         	<h4>Modificar</h4>

         	<form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">

        <input type='hidden' value="{{novedad.id}}" name="id"> 	
  		<div class="mb-3">
  			<label for="">Titulo</label>
				<input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
      </div>
		  <div class="mb-3">
		  	<label for="">Subtitulo</label>
		   <textarea class="form-control" name="subtitulo">{{novedad.subtitulo}}</textarea>
			</div>   	
    	<div class="mb-3">
		  	<label for="">Cuerpo</label>
		   <textarea class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
			</div>   

		<div class="mb-3 row">
		<p>
			<label> Imagen: <input type="file" name="imagen" id="imagen"/></label>
		</p>

		<p>
		<label><input type="checkbox" name="img_delete" id="img_delete" value="1">
			Eliminar imagen actual </labe>
		<input type="hidden" name="img_original" value="{{novedad.img_id}}">	
		</p>
			</div>
	
    		
    		<div class="mb-3">	
			<button type="submit" class="btn btn-primary">Modificar</button>
				</div>

    </form>



    
    {{#if error}}
      {{message}}
    {{/if}}  
    
  </div>
</div>   