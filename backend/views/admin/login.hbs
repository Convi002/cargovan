<div class="container" style="margin-top:100px; background-color:lightblue;">
  <div class="row">
    <form action="/admin/login" method="post">
       <div class="mb-3 row">
         <div class="col-sm-10">

            <label for="exampleInputName" class="form-label">Nombre del Cliente</label>
  
            <input type="text" class="form-control" id="nombreDelCliente"  placeholder="Nombre y Apellido" name="usuario">
            <div id="name" class="form-text"></div>
          </div>
        </div>
        
        <div class="mb-3 row">
          <div class="col-sm-10">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="inputPassword" class="form-control" id="exampleInputPassword1" placeholder="Contrasena" name="password">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    
    {{#if error}}
      <p>Por favor revise los datos ingresados</p>
    {{/if}}  
    
  </div>
</div>   

